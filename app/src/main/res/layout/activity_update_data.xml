<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UpdateData">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/AppBarOverlay"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Rumah Sakit Rujukan Covid-19 Jawa Timur"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/new_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nama RS Baru"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/new_kota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Kota/Kab Baru"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/new_notelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="No Telp Baru"
            android:inputType="number" />
        <EditText
            android:id="@+id/new_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Alamat Baru"
            android:inputType="textPersonName" />
        <Button
            android:id="@+id/update"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/update"/>

    </LinearLayout>
</LinearLayout>